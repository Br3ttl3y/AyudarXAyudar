@using AyudarXAyudar.Views.Pets.Resources
@model AyudarXAyudar.Models.Pet

@{
    ViewBag.Title = Create.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> @Create.Title </h2>

@using (Html.BeginForm("Create", "Pets", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div id="createForm" class="form-horizontal">
        <h4> @Create.FormTitle </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div id="name" class="form-group">
            @Html.LabelFor(model => model.Name,
                htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name,
                    new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, string.Empty,
                    new { @class = "text-danger" })
            </div>
        </div>

        <div id="picture" class="form-group">
            @Html.LabelFor(model => model.PictureUrl,
                htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="uploadFile" name="uploadFile"
                       class="btn btn-default" />
                @Html.ValidationMessageFor(model => model.PictureUrl, 
                    string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div id="description" class="form-group">
            @Html.LabelFor(model => model.Description,
                htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description,
                    new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, 
                    string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div id="submitButton" class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Create.Title" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Create.BackToList, "Index")
</div>
