@using AyudarXAyudar.Views.Shared.Resources
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, 
        new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            @*We don't want to handle any user login or logouts right now.'
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!",
                    "Index", "Manage", routeValues: null,
                    htmlAttributes: new { title = "Manage" })
            </li>*@
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">
                    @_LoginPartial.LogOff
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*Do not allow people to register, only use one account as admin.
        <li>
            @Html.ActionLink("Register", "Register", "Account", null, 
                new { id = "registerLink" })
        </li>*@
        <li>
            @Html.ActionLink(_LoginPartial.Admin, "Login", "Account", null, 
                new { id = "loginLink" })
        </li>
    </ul>
}
